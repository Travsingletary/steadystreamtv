  "routes": [
    {
      "path": "/",
      "component": "Home",
      "description": "Landing page with IPTV service overview"
    },
    {
      "path": "/payment",
      "component": "PaymentComponent",
      "description": "Subscription plan selection and crypto payment"
    },
    {
      "path": "/subscription",
      "component": "SubscriptionDashboard",
      "description": "User subscription management and IPTV credentials"
    },
    {
      "path": "/payment/success",
      "component": "PaymentSuccess",
      "description": "Payment confirmation and IPTV setup instructions"
    },
    {
      "path": "/payment/cancel",
      "component": "PaymentCancel",
      "description": "Payment cancellation page"
    },
    {
      "path": "/app-config/:id",
      "component": "AppConfigComponent",
      "description": "TiviMate app configuration page for mobile setup"
    }
  ],
  "api_endpoints": [
    {
      "path": "/api/webhook/nowpayments",
      "method": "POST",
      "description": "NOWPayments webhook for payment notifications",
      "handler": "webhookHandler"
    },
    {
      "path": "/api/payment/create",
      "method": "POST",
      "description": "Create new crypto payment",
      "handler": "createPayment"
    },
    {
      "path": "/api/payment/status/:id",
      "method": "GET",
      "description": "Check payment status",
      "handler": "getPaymentStatus"
    }
  ],
  "features": [
    "Cryptocurrency payments (300+ coins)",
