  "automation_flow": {
    "1": "User selects subscription plan",
    "2": "NOWPayments generates crypto payment",
    "3": "User completes cryptocurrency payment",
    "4": "Webhook triggers automation",
    "5": "Supabase creates user record",
    "6": "MegaOTT provisions IPTV account",
    "7": "Welcome email sent with credentials",
    "8": "Dashboard shows active subscription",
    "9": "User downloads TiviMate app",
    "10": "QR code auto-configures app"
  }
