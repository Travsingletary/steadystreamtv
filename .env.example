# SteadyStream TV Environment Configuration
# Copy this file to .env.local and fill in your actual values

# ===== NOWPayments Configuration =====
# Get these from https://account.nowpayments.io
NOWPAYMENTS_API_URL=https://api.nowpayments.io/v1
NOWPAYMENTS_API_KEY=your_api_key_here
NOWPAYMENTS_IPN_SECRET=your_ipn_secret_here

# For testing, use sandbox:
# NOWPAYMENTS_API_URL=https://api-sandbox.nowpayments.io/v1

# ===== Supabase Configuration =====
# Get these from https://supabase.com/dashboard
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ===== MegaOTT Configuration =====
# Get these from your MegaOTT reseller account
MEGAOTT_API_URL=https://megaott.net/api/v1
MEGAOTT_API_KEY=your_megaott_api_key
MEGAOTT_USERNAME=your_reseller_username
MEGAOTT_PASSWORD=your_reseller_password

# ===== Email Configuration =====
# Get API key from https://resend.com
RESEND_API_KEY=your_resend_api_key
FROM_EMAIL=noreply@yourdomain.com

# ===== Application Configuration =====
WEBHOOK_URL=https://your-project.supabase.co/functions/v1/nowpayments-webhook
FRONTEND_URL=https://yourdomain.com
BACKEND_URL=https://your-backend-url.com

# ===== Database Configuration =====
# These are automatically set by Supabase, but can be overridden
DATABASE_URL=postgresql://your-db-url
DIRECT_URL=postgresql://your-direct-db-url

# ===== Security Configuration =====
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key

# ===== Development Configuration =====
NODE_ENV=development
DEBUG=true
LOG_LEVEL=info